<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme_Translucent" parent="Theme_Not_Translucent" />

    <style name="Settings_Theme" parent="AppTheme">
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Theme_Not_Translucent" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme_Translucent_Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
