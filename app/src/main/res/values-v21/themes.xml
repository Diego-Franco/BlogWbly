        <item name="android:textColorHint">@color/secondary_text_default_material_light</item>
        <item name="android:editTextColor">@color/primary_text_default_material_light</item>
        <item name="android:textColorLink">?colorAccent</item>
        <item name="android:radioButtonStyle">@style/RadioButton.Style.Light</item>
        <item name="android:checkboxStyle">@style/CheckBox.Style.Light</item>
        <item name="dropDownListViewStyle">@style/PopupMenuStyle.Light</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
        <item name="android:textColorSecondary">?attr/colorAccent</item>
    </style>

