<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    class = "com.defch.blogwbly.ui.BlogPictureView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/container_widget_post_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_picture"
        android:layout_marginLeft="@dimen/customview_horizontal_margin"
        android:layout_marginRight="@dimen/customview_horizontal_margin"
        android:layout_marginBottom="@dimen/customview_vertical_margin"
        android:layout_marginTop="@dimen/customview_vertical_margin">

        <ImageView
            android:id="@+id/widget_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/customview_image_horizontal_margin"
            android:layout_marginRight="@dimen/customview_image_horizontal_margin"
            android:layout_marginBottom="@dimen/customview_image_vertical_margin"
            android:layout_marginTop="@dimen/customview_image_vertical_margin"
            android:visibility="gone"/>

        <VideoView
            android:id="@+id/widget_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/customview_image_horizontal_margin"
            android:layout_marginRight="@dimen/customview_image_horizontal_margin"
            android:layout_marginBottom="@dimen/customview_image_vertical_margin"
            android:layout_marginTop="@dimen/customview_image_vertical_margin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/widget_close_btn"
                android:layout_width="@dimen/size_button_close"
                android:layout_height="@dimen/size_button_close"
                android:src="@mipmap/ic_close"
                android:layout_gravity="right"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>